]
let pelib_config : Config {
    .include_dirs += ..
    .defines += [ "HAVE_C99INCLUDES" "QT_CORE_LIB" ]
    if (target_toolchain == `gcc) || (target_toolchain == `clang) {
        .cflags_cc += "-std=c++11"
    }
}
let pelib : SourceSet {
    .sources += pelib_files;
    .configs += [ pelib_config qt.core_client_config ]
}

